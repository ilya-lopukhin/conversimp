{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "convertsimp",
  "version": "0.1.0",
  "identifier": "com.convertsimp.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "dragDropEnabled": true,
        "title": "convertsimp",
        "width": 640,
        "height": 480,
        "minWidth": 480,
        "minHeight": 320
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
